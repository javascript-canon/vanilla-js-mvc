{
  "name": "javascript-canon",
  "version": "1.0.0",
  "description": "a presentation of the most important learning JavaScript resources",
  "author": "Kai 'kaidez' Gittens",
  "license": "ISC",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/javascript-canon/vanilla-js-mvc.git"
  },
  "scripts": {
    "server": "nodemon -e scss,ejs,js --watch",
    "build-js": "browserify js-build/*.js | uglifyjs -mc > public/js/scripts.js",
    "build-sass": "node-sass css-build/style.scss css-build/style.css",
    "concat-css": "cat css-build/*.css > css-build/build-sandbox/css/style.css",
    "uncss-sandbox-html": "ejs-cli --base-dir views/ '*.ejs' --out css-build/build-sandbox/",
    "uncss": "grunt",
    "clean-css": "cleancss css-build/build-sandbox/css/style.css --s0 -o public/css/style.css",
    "build": "npm run build-css && npm run build-js",
    "watch-js": "nodemon -e js -w js-build -x 'npm run build-js'",
    "watch-css": "nodemon -e scss -w css-build -w css-build/imports -x 'npm run build-css'",
    "start": "npm run server & npm run watch-js & npm run watch-css",
    "image-minify": "imagemin image-build/* --out-dir=public/img/",
    "book-minify": "imagemin image-build/book-images/* --out-dir=public/img/book-images/",
    "copy-normalize": "ncp node_modules/normalize.css/normalize.css css-build/normalize.css",
    "copy-route": "rsync -av --exclude='css-build/' --exclude='js-build/' --exclude='node_modules/' --exclude='.gitignore' --exclude='Gruntfile.js' --exclude='app.js' --exclude='package.json'  ../vanilla-js-mvc/ ../../javascript-canon/foo"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-uncss": "^0.6.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.0.0",
    "nodemon": "1.11.0",
    "normalize.css": "^5.0.0",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "ejs": "^2.5.3",
    "express": "^4.14.0",
    "jquery": "^3.1.0",
    "underscore": "^1.8.3"
  }
}
