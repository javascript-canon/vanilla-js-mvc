{
  "name": "javascript-canon",
  "version": "1.0.0",
  "description": "a presentation of the most important learning JavaScript resources",
  "author": "Kai 'kaidez' Gittens",
  "license": "ISC",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/javascript-canon/vanilla-js-mvc.git"
  },
  "scripts": {
    "build-js": "browserify js-build/*.js | uglifyjs -mc > public/js/scripts.js",
    "watch-js": "nodemon -e js -w js-build -x 'npm run build-js && npm run copy-example'",
    "watch-ejs": "nodemon -e ejs -w views -w views/partials -x 'npm run copy-example'",
    "image-minify": "imagemin image-build/* --out-dir=public/img/",
    "book-minify": "imagemin image-build/book-images/* --out-dir=public/img/book-images/",
    "copy-example": "rsync -av --exclude='css-build/' --exclude='js-build/' --exclude='node_modules/' --exclude='.gitignore' --exclude='Gruntfile.js' --exclude='app.js' --exclude='package.json' --exclude='.git/'  ../vanilla-js-mvc/ ../../javascript-canon/vanilla-js-mvc/",
    "start": "npm run watch-js && npm run watch-ejs"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "clean-css": "^3.4.24",
    "ncp": "^2.0.0",
    "node-sass": "^4.3.0",
    "nodemon": "1.11.0",
    "normalize.css": "^5.0.0",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "jquery": "^3.1.1",
    "underscore": "^1.8.3"
  }
}
